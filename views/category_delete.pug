extends layout

block content

  h1 Delete Category: #{category.name}

  hr

  if category_items.length

    p Delete the following items before attempting to delete this Category.
    div
      h4 Items

      each item in category_items
        dt
          a(href=item.url) #{item.name}
        dd #{item.description}
  
  else 
    p Really delete this Category?

    form(method='POST' action='')
      div
        input#id(type='hidden', name='id', required='true', value=category._id)
      button(type='submit') Delete